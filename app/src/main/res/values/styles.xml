<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Okada.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Okada.Splashscreen" parent="Theme.Okada">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Theme.Okada.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.Okada.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
    </style>



</resources>
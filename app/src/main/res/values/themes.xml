<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Okada" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="LoginTheme" parent = "FirebaseUI">
        <item name="colorPrimary">@color/app_yellow</item>
        <item name="colorPrimaryDark">@color/app_dark_yellow</item>
        <item name="colorAccent">@color/black</item>


        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/app_dark_grey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_okada</item>
        <item name="android:windowFullscreen">true</item>

    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Okada" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/app_yellow</item>
        <item name="colorPrimaryDark">@color/app_dark_yellow</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DialogTheme" parent="Theme.Okada">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/app_yellow</item>
        <item name="colorPrimaryDark">@color/app_dark_yellow</item>
        <item name="colorAccent">@color/black</item>


        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/app_dark_grey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_okada</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="Theme.Okada.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Okada.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.Okada.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>